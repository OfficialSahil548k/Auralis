<% layout('/layouts/boilerplate') %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h1><%= list.title %></h1>
      <form
        action="/listing/<%=list._id%>?_method=PUT"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <label for="id">ID : </label> <%= list._id %> <br /><br />
        <div class="mb-3">
          <label for="title" class="form-label">Title : </label>
          <input
            type="text"
            name="listing[title]"
            placeholder="enter title"
            value="<%= list.title %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter valid Title.</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description : </label>
          <textarea
            name="listing[description]"
            placeholder="Enter Description"
            class="form-control"
            autocorrect="on"
            required
          >
<%= list.description %></textarea
          >
          <div class="invalid-feedback">
            Please enter the Correct description of the Location
          </div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image : </label>
          <input
            type="file"
            name="listing[image][url]"
            class="form-control"
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price : </label>
            <input
              type="number"
              name="listing[price]"
              placeholder="enter price"
              value="<%= list.price %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter the valid price</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country : </label>
            <input
              type="text"
              name="listing[country]"
              placeholder="enter Country"
              value="<%= list.country%>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter the valid country</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location : </label>
          <input
            type="text"
            name="listing[location]"
            placeholder="enter Location"
            value="<%= list.location %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location must be Correct.</div>
        </div>
        <button type="submit" class="btn btn-dark add-btn">
          Confirm Change
        </button>
      </form>
    </div>
  </div>
</body>
